<link rel="stylesheet" href="/stylesheets/login.css">

<main class="loginpg">
  <div class="container login-container">
    <div class="row">
      <div class="col-md-6 login-form-1">
        <h3>Login</h3>
        <form class="login-form">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Email *" value="" id="email-login" />
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Your Password *" value="" id="password-login" />
          </div>
          <div class="form-group">
            <input type="submit" class="btnSubmit" value="Login" />
          </div>
        </form>
      </div>
      <div class="col-md-6 login-form-2 ">
        <h3>Sign Up</h3>
        <form class="signup-form">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="UserName *" value="" id="username-signup" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Email *" value="" id="email-signup" />
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Your Password *" value="" id="password-signup" />
          </div>
          <div class="form-group">
            <input type="submit" class="btnSubmit" value="Submit" />
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
<script src="/javascript/login.js"></script>